execute: function (execDef) {
    var emoji = execDef.value.emoji, context = execDef.editContext,
        emojiSpan = context.doc.createElement("span");

    emojiSpan.innerHTML = emoji;

    // Get the current cursor position (range)
    var range = CUI.rte.Common.ua.isIE ? CUI.rte.Selection.saveNativeSelection(context)
        : CUI.rte.Selection.getLeadRange(context);

    // Insert the emoji at the cursor position
    range.insertNode(emojiSpan);

    // Now, set the range to after the inserted emoji
    var newRange = context.doc.createRange();
    newRange.setStartAfter(emojiSpan); // Move the cursor after the inserted emoji
    newRange.setEndAfter(emojiSpan);   // Set the end of the selection to the same point
    
    // Update the selection with the new range (i.e., place the cursor after the emoji)
    CUI.rte.Selection.selectRange(newRange);
}
